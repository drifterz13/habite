<article class="container">
  <h3 class="mb-4">
    Quest #<%= @quest.id %>
  </h3>

  <h4 class="fs-5 fw-normal">
    <%= @quest.title %>
  </h4>

  <p class="fw-light mb-4"><%= @quest.description %></p>

  <section>
    <ol class="list-group list-group-numbered">
      <% @quest.tasks.each_with_index do |task, idx| %>
        <li class="list-group-item d-flex justify-content-between align-items-start">
          <div class="ms-2 me-auto">
            <div class="fw-semibold"><%= task.title %></div>
            <%= task.description %>
          </div>
          <span class="badge text-bg-primary rounded-pill">14</span>
        </li>
      <% end %>
    </ol>
  </section>
</article>

<article class="container mt-4">
  <h5 class="mb-4">Quest rewards</h5>

  <section class="row">
    <% @quest.rewards.each do |reward| %>
      <div class="col-4">
        <div class="card">
          <div class="card-body align-self-center text-center">
            <% if reward.is_gold? %>
              <%= image_tag "icons/gold.png", size: "32x32", alt: "gold icon" %>
              <div class="card-title"><%= reward.rewardable.amount %></div>
            <% elsif reward.is_exp? %>
              <%= image_tag "icons/exp_up.png", size: "32x32", alt: "exp up icon" %>
              <div class="card-title"><%= reward.rewardable.amount %></div>
            <% elsif reward.is_gear? %>
              <%= image_tag "icons/sword_lv1.png", size: "32x32", alt: "gear icon" %>
              <div class="card-title"><%= reward.rewardable.title %></div>
            <% end %>
          </div>
        </div>
      </div>
    <% end %>
  </section>
</article>
